# Thermohydraulique 2D VEF Boussinesq #
# PARALLEL OK 8 #
# Pour etre ok voire les modifs de P Emonot #
dimension 2
Pb_Thermohydraulique pb
Domaine dom
# BEGIN MESH #
Mailler dom
{
    Pave Cavite
    {
        Origine 0. 0.
        Nombre_de_Noeuds 11 11
        Longueurs 0.01 0.01
    }
    {
        Bord Gauche X = 0.  0. <= Y <= 0.01
        Bord Haut Y = 0.01  0. <= X <= 0.01
        Bord Bas Y = 0.     0. <= X <= 0.01
        Bord Droit X = 0.01 0. <= Y <= 0.01
    }
}

Trianguler_H dom
# END MESH #
# BEGIN PARTITION
Partition dom
{
    Partition_tool metis { Nb_parts 2 }
    Larg_joint 2
    zones_name DOM
}
End
END PARTITION #

# BEGIN SCATTER
Scatter DOM.Zones dom
END SCATTER #

VEFPreP1B dis

Scheme_euler_explicit sch
Read sch
{
    nb_pas_dt_max 10
    tinit 0.
    tmax 1.2
    dt_min 0.0005
    dt_max 0.0005
    dt_impr 0.001
    dt_sauv 100
    seuil_statio 1.e-8
}

Associate pb dom
Associate pb sch
Discretize pb dis

Read pb
{

    fluide_incompressible {
        gravite champ_uniforme 2 0 -9.81

        mu Champ_Uniforme 1 1.85e-5
        rho Champ_Uniforme 1 1.17
        lambda Champ_Uniforme 1 0.0262
        Cp Champ_Uniforme 1 1006
        beta_th Champ_Fonc_xyz dom 1 3.41e-3
    }


    Navier_Stokes_standard
    {
        solveur_pression GCP { precond ssor { omega 1.65 } impr seuil 1.e-14 }
        convection { EF transportant_bar 0 transporte_bar 0 filtrer_resu 0 antisym 0 }
        diffusion { }
        sources { boussinesq_temperature { T0 5. } }
        initial_conditions {
            vitesse Champ_Uniforme 2 0. 0.
        }
        boundary_conditions {
            Haut paroi_fixe
            Bas paroi_fixe
            Gauche paroi_fixe
            Droit paroi_fixe
        }
    }
    Convection_Diffusion_Temperature
    {
        diffusion { }
        convection { muscl }
        boundary_conditions
        {
            Haut paroi_adiabatique
            Bas paroi_adiabatique
            Gauche Paroi_temperature_imposee Champ_Front_Uniforme 1 10.
            Droit Paroi_temperature_imposee Champ_Front_Uniforme 1 0
        }
        initial_conditions { Temperature Champ_Uniforme 1 5. }
    }

    Post_processing
    {
        format lata
        fields dt_post 0.1
        {
            pression elem
            pression som
            vitesse som
            vitesse elem
            vitesse faces
            temperature som
            temperature elem
        }
    }

    Post_processing
    {
        format med
        fields dt_post 0.1
        {
            pression elem
            pression som
            vitesse som
            vitesse elem
            vitesse faces
            temperature som
            temperature elem
        }
    }

}
Solve pb
End
