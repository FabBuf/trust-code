# Thermo-hydraulique 3D Axi avec frontieres ouvertes #
# PARALLEL NOT #

dimension 3

Pb_Thermohydraulique pb

Domaine dom

# BEGIN MESH #
Mailler dom
{
    Pave fpt4
    {
        Origine   0.45 0.  0.0
        Longueurs 0.40 1. 1.
        Nombre_de_Noeuds 11 11 13
    }
    {
        Bord Airli       X = .85        0. <= Y <= 1.      0. <= Z <= 1.
        Bord Puits       X = .45        0. <= Y <= 1.      0. <= Z <= 1.
        Bord Adhere_Haut Z = 0.       0.45 <= X <= 0.85    0. <= Y <= 1.
        Bord Adhere_Bas  Z = 1.      0.45 <= X <= 0.85    0. <= Y <= 1.
        Bord Adhere_lateral Y = 0.       0.45 <= X <= 0.85    0. <= Z <= 1.
        Bord Adhere_lateral Y = 1.       0.45 <= X <= 0.85    0. <= Z <= 1.

    }

}


# END MESH #
# BEGIN PARTITION
Partition dom
{
    Partition_tool tranche { tranches 2 1 1 }
    Larg_joint 1
    zones_name DOM
}
End
END PARTITION #

# BEGIN SCATTER
Scatter DOM.Zones dom
END SCATTER #

VDF dis

Scheme_euler_explicit sch

Read sch
{
    tinit 0.
    tmax 30.
    dt_min  1.e-2
    dt_max  1.e-0
    dt_impr 1.e-2
    dt_sauv 10000.
    seuil_statio 1.e-80
}

Associate pb dom
Associate pb sch
Discretize pb dis

Read pb
{

    fluide_incompressible {
        gravite champ_uniforme 3 0. 0. -9.81
        mu Champ_Uniforme 1 4e-05
        rho Champ_Uniforme 1 2
        lambda  Champ_Uniforme    1  0.03
        Cp Champ_Uniforme 1 500
        beta_th Champ_Uniforme    1  3.e-3
    }

    Navier_Stokes_Standard
    {
        solveur_pression GCP {
            precond ssor { omega 1.500000 }
            seuil 1e-15
            impr
        }
        convection { amont }
        diffusion { }
        sources { boussinesq_temperature { T0 20. } }
        initial_conditions { vitesse Champ_Uniforme 3  0. 0.1 0. }
        boundary_conditions
        {
            Airli frontiere_ouverte_pression_imposee Champ_Front_Uniforme 1 0.
            Puits paroi_fixe
            Adhere_Haut paroi_fixe
            Adhere_Bas paroi_fixe
            Adhere_lateral paroi_fixe
        }
    }

    Convection_Diffusion_Temperature
    {
        diffusion { }
        convection { amont }
        boundary_conditions
        {
            Airli  Frontiere_ouverte T_ext Champ_Front_Uniforme 1 20.
            Puits  paroi_temperature_imposee
            Champ_Front_Uniforme 1 40.
            Adhere_Haut paroi_temperature_imposee
            Champ_Front_Uniforme 1 20.
            Adhere_Bas paroi_temperature_imposee
            Champ_Front_Uniforme 1 20.
            Adhere_lateral paroi_temperature_imposee
            Champ_Front_Uniforme 1 20.

        }
        initial_conditions { Temperature Champ_Uniforme 1 20. }
    }


    Post_processing
    {
        format lata
        fields dt_post 1e6
        {
            vitesse som
            vitesse elem
            vitesse faces
            temperature elem
            temperature som
        }
    }
    Post_processing
    {
        format med
        fields dt_post 1e6
        {
            vitesse som
            vitesse elem
            vitesse faces
            temperature elem
            temperature som
        }
    }
}

Solve pb
End
